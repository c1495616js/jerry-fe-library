{
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com",
      "allowBranch": "main"
    },
    "npmClient": "yarn",
    "useWorkspaces": true,
    "version": {
      "push": false,
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "ignoreChanges": [
        ".*",
        "./*.md",
        "./package.json",
        "./package-lock.json",
        "./lerna.json"
      ]
    }
  }
}
